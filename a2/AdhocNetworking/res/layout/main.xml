<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:weightSum="1">
<TextView 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="@string/myMACaddr"
	android:id="@+id/myMACaddr" />
<TextView 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="@string/myIPaddr"
	android:id="@+id/myIPaddr" />
<TextView android:id="@+id/lastscantime" android:layout_width="fill_parent" android:text="@string/lastscantime" android:layout_height="wrap_content"></TextView>
<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout1">
    <Button android:layout_width="141dp" android:layout_height="wrap_content" android:text="Start Scanning" android:id="@+id/startscan_button"></Button>
    <ProgressBar android:id="@+id/progressBar1" android:layout_width="wrap_content" android:layout_height="wrap_content"></ProgressBar>
</LinearLayout>
<ListView 
    android:layout_width="fill_parent" android:id="@+id/neighbourMACs" android:layout_height="87dp" android:layout_weight="0.03"/>
<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout2">
    <Button android:layout_width="129dp" android:layout_height="wrap_content" android:text="Send BLS Query" android:id="@+id/sendBLSquery_Button"></Button>
    <ProgressBar android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/progressBar2"></ProgressBar>
</LinearLayout>
<ListView android:layout_width="match_parent" android:layout_height="81dp" android:id="@+id/IPs_listView"></ListView>
<Button 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="@string/startserver" android:id="@+id/startStopServer_button"/>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="@string/status"
	android:id="@+id/status" />
</LinearLayout>
